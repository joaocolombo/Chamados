@model MVC.ViewModel.Home.ChamadoViewModel
    <div class="form-group">
        <div class="row">
            <div class="offset-lg-9 col-lg-1">
                <button type="button" data-url="@Url.Action("AssumirChamado","Fila", new{id =Model.Codigo, nomeAtendente =Model.Atendente.Nome})" data-toggle="slidePanel" class="btn btn-lg btn-primary waves-effect waves-light">
                    Assumir
                </button>
            </div>
        </div>
    </div>

<div class="form-group">
    <div class="row">
        <div class="col-lg-3">
            <h4>Codigo</h4>
            <label>@Model.Codigo</label>
        </div>
        <div class="col-lg-3">
            <h4>Status</h4>
            <label>@Model.Status</label>
        </div>
        <div class="col-lg-3">
            <h4>Nivel</h4>
            <label>@Model.Nivel</label>
        </div>
        <div class="col-lg-3">
            <h4>Atendente</h4>
            <label>@Model.Atendente.Nome</label>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <h4 class="col-lg-2">Filial</h4>
        <div class="col-lg-9">
            <label id="filial">@Model.Filial.Nome</label>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <h4 class="col-lg-2">Solicitante</h4>
        <div class="col-lg-9">
            <label>@Model.Solicitante</label>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <h4 class="col-lg-2">Assunto</h4>
        <div class="col-lg-9">
            <label>@Model.Assunto</label>
        </div>
    </div>
</div>
<div class="row">
    <h4>Categorias</h4>
</div>
@{
    foreach (var categoria in Model.Categorias)
    {
        <div class="row">
            <div class="offset-lg-2">
                <label>@categoria.Descricao</label>
            </div>
        </div>
    }
}

<h3>Evento</h3>
@{
    foreach (var evento in Model.Eventos)
    {
        <div>
            <div class="form-group">
                <div class="row">
                    <div hidden="">
                        <label>@evento.Codigo</label>
                    </div>
                    <div class="col-lg-3">
                        <h5>Atendente</h5>
                        <label>@evento.Atendente.Nome</label>
                    </div>
                    <div class="col-lg-3">
                        <h5>Nivel</h5>
                        <label>@evento.Atendente.Nivel</label>
                    </div>
                    <div class="col-lg-3">
                        <h5>Status</h5>
                        <label>@evento.Status</label>
                    </div>
                    <div class="col-lg-3">
                        <h5>Abertura</h5>
                        <label>@evento.Abertura</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" disabled rows="5">@evento.Descricao</textarea>
            </div>
        </div>

    }
}